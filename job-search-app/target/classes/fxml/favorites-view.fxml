<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.jobsearch.ui.FavoritesController"
      spacing="10">
      
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>
    
    <Label text="Favorite Jobs" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    
    <TableView fx:id="favoritesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title"/>
            <TableColumn fx:id="companyColumn" text="Company"/>
            <TableColumn fx:id="locationColumn" text="Location"/>
            <TableColumn fx:id="salaryColumn" text="Salary"/>
        </columns>
    </TableView>
    
    <HBox spacing="10">
        <Button fx:id="removeFavoriteButton" text="Remove" onAction="#handleRemoveFavorite"/>
        <Button fx:id="viewDetailsButton" text="View Details" onAction="#handleViewDetails"/>
        <Button fx:id="recordApplicationButton" text="Record Application" onAction="#handleRecordApplication"/>
    </HBox>
</VBox>